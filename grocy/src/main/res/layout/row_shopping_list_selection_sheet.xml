<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/container"
  style="@style/Widget.Grocy.LinearLayout.ListItem.SingleLine.Clickable"
  android:paddingStart="16dp"
  android:paddingEnd="8dp"
  android:animateLayoutChanges="true">

  <ImageView
    android:id="@+id/image_selected"
    style="@style/Widget.Grocy.ImageView.Icon"
    android:src="@drawable/ic_round_check_circle"
    android:visibility="invisible"
    tools:ignore="ContentDescription"
    android:layout_marginEnd="16dp"
    app:tint="?attr/colorPrimary" />

  <TextView
    android:id="@+id/name"
    style="@style/Widget.Grocy.TextView.ListItem.Title"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:singleLine="false" />

  <com.google.android.material.button.MaterialButton
    android:id="@+id/delete"
    style="@style/Widget.Grocy.Button.IconButton"
    app:icon="@drawable/ic_round_delete_anim" />

  <com.google.android.material.button.MaterialButton
    android:id="@+id/edit"
    style="@style/Widget.Grocy.Button.IconButton"
    app:icon="@drawable/ic_round_edit" />

</LinearLayout>